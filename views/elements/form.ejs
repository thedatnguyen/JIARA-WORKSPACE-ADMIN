<% 
	// const collection = "items";
	// const linkPrefix = systemConfig.prefixAdmin + `/${collection}/`;
	
%>

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading"><%=title%></div>
			<div class="panel-body">
				<% //include ./../../elements/errors %>
				<div class="row">
					<div class="col-lg-6">
						<form role="form" action="<%=linkPrefix%><%=action%>" method="POST">
							<div class="form-group">
								<label>Name</label>
								<input class="form-control" name="name" value="<%=name%>">
							</div>
							<div class="form-group">
								<label>Ordering</label>
								<input class="form-control" type="number" name="ordering" value="<%=ordering%>">
							</div>
							<div class="form-group">
								<label>Status</label>
								<select name="status" class="form-control" >
									<option value="novalue">Choose Status</option>
									<option value="active" <%= status == 'active' ? 'selected' : ' '  %> <%= //(item.status == "active") ? 'selected="selected"' : '' %> >Active</option>
									<option value="inactive" <%= status == 'inactive' ? 'selected' : ' '  %> <%= //(item.status == "inactive") ? 'selected="selected"' : '' %> >Inactive</option>
								</select>
							</div>
							
							<div class="form-group">
								<input class="form-control" name="_id" value="<%=_id%>" type="hidden" >
								<button type="submit" class="btn btn-primary">Submit </button>
								<a type="button" href="<%= linkPrefix %>" class="btn btn-default">Cancel</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>