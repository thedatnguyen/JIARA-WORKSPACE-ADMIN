<div class="col-lg-12">
  <div class="panel panel-info">
    <div class="panel-heading">
      <a href="/groups"><i class="fa-solid fa-arrow-left-long"></i> Back to groups</a>

      <h5>Group Details</h5>
      <p>Group ID: <%=group.groupId%></p>
      <p>Group name: <%=group.groupName%></p>      
      <p>User counts: <%=group.members.length%></p>
      <p>Post counts: <%=group.posts.length%></p>
    </div>

    <div class="panel-body">

      <div class="input-group" style="float: left;">
        <span class="input-group-btn1">
          <a class="btn btn-sm btn-success" id="btnAdd" type="butt">Add</a>
        </span>
      </div>

      <form role="form" class="form-inline zt-form" id="zt-form" action="/groups/<%=group.groupId%>/managers" method="post">
        <div class="table-responsive">
          <table class="table table-striped" id="tableManagers">
            <thead>
              <tr>
                <th><input type="checkbox" class="cbAll" /></th>
                <th>#</th>
                <th>Manager id</th>
                <th colspan="2">Action</th>
              </tr>
            </thead>
            <tbody>
              <% group.managers.forEach((manager, index) => {%>
              <tr class="itemRow" name="">
                <td><input type="checkbox" name="cid" value="<%=manager%>" /></td>
                <td name="index"><%= index + 1 %></td>
                <td><%=manager%></td>
                <td>
                  <a type="button" class="btn btn-danger btn-sm btn-delete" href="/groups/<%=group.groupId%>/managers?deleteManager=<%=manager%>">Delete</a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </form>

    </div>

  </div>
</div>

<p id="status" style="font-weight: bolder;color: red;float: left;"></p>
<a type="button" class="btn btn-sm btn-primary" style="float: right;margin-right: 50px;" id="btnSave" onclick="submitForm()">Save changes</a>